depend() {
	need lircd
}

start() {
	ebegin "Starting irexec"
	/usr/bin/irexec -d /etc/vdr/irexec.conf
	eend $? "Failed to start irexec."
}

stop() {
	ebegin "Stopping irexec"
	killall irexec
	eend $? "Failed to stop irexec."
}

