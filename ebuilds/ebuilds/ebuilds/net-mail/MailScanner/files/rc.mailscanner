depend() {
	after *
}

start() {
	ebegin "Starting MailScanner"
	/opt/MailScanner/bin/MailScanner
	eend $?
}

stop() {
	ebegin "Stopping MailScanner"
	start-stop-daemon --stop --quiet --pidfile /var/run/MailScanner/MailScanner.pid
	eend $?
}
